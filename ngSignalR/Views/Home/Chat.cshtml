@{
    Layout = null;
}
<h1 class="page-header"><i class="fa fa-signal"></i>&nbsp;ng-SignalR&nbsp;<small>AngularJS Module for SignalR</small></h1>
<h2>Simple Chat</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="input-group">
            <div class="input-group-addon">
                Username
            </div>
            <input type="text" ng-model="model.username" class="form-control" />
        </div>
        <hr/>
        <div class="input-group">
            <input type="text" ng-model="model.message" class="form-control" />
            <div class="input-group-btn">
                <a class="btn btn-primary" ng-click="sendMessage()" ng-disabled="!model.username || !model.message">Send Message</a>
            </div>
        </div>
        <br/>
        <div class="form-control" style="height:400px; overflow-y: scroll" id="msgContainer">
            <div ng-repeat="msg in model.messages track by $index">
                <div class="alert " ng-class="{'alert-warning': msg.username === model.username, 'alert-info': msg.username !== model.username}">
                    <b>{{msg.username === model.username ? 'You' : msg.username}}</b> on {{msg.date}} : {{msg.content}}
                </div>
            </div>
        </div>
        <hr>
   
    </div>
</div>


